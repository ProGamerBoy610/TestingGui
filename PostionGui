local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local Workspace = game:GetService("Workspace")

-- âœ… Teleport to a part
local function tpToPart(part)
    local char = lp.Character or lp.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")
    hrp.CFrame = part.CFrame + Vector3.new(0, 3, 0)
    print("[ğŸ”«] Teleported to GunDrop!")
end

-- âœ… Wait for "GunDrop" part to appear in workspace
task.spawn(function()
    print("[ğŸ‘ï¸] Watching for GunDrop...")

    Workspace.ChildAdded:Connect(function(child)
        if child:IsA("Part") and child.Name == "GunDrop" then
            print("[ğŸ“¦] GunDrop detected!")
            task.wait(0.1) -- Small wait to ensure it's fully spawned
            tpToPart(child)
        end
    end)

    -- In case GunDrop already exists
    local existing = Workspace:FindFirstChild("GunDrop")
    if existing and existing:IsA("Part") then
        tpToPart(existing)
    end
end)
