CircleGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0.0, Color3.fromRGB(30, 30, 30)),
    ColorSequenceKeypoint.new(1.0, Color3.fromRGB(15, 15, 15))
}
CircleGradient.Rotation = 45
CircleGradient.Parent = CircleFrame

local ToggleButtonCircle = Instance.new("TextButton")
ToggleButtonCircle.Name = "ToggleButton"
