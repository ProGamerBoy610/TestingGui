local DrRayLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Global variables
local window = nil
local tab = nil
local currentSelectedPlayer = nil
local currentSelectedItem = nil
local screenGui = nil

-- Function to get all player names
local function getPlayerNames()
    local names = {}
    local players = Players:GetPlayers()
    
    for _, p in ipairs(players) do
        if p ~= player then
            table.insert(names, p.Name)
        end
    end
    
    if #names == 0 then
        table.insert(names, "No other players")
    end
    
    return names
end

-- Function to get items from selected player's backpack
local function getPlayerItems(playerName)
    local items = {}
    local targetPlayer = Players:FindFirstChild(playerName)
    
    if targetPlayer and targetPlayer:FindFirstChild("Backpack") then
        local backpack = targetPlayer.Backpack
        
        for _, item in pairs(backpack:GetChildren()) do
            if item:IsA("Tool") or item:IsA("HopperBin") then
                table.insert(items, item.Name)
            end
        end
    end
    
    return items
end

-- Function to get current items from selected player (fresh data)
local function getCurrentPlayerItems()
    if not currentSelectedPlayer or currentSelectedPlayer == "No other players" then
        return {"Select a player first"}
    end
    
    local items = getPlayerItems(currentSelectedPlayer)
    
    if #items == 0 then
        return {"Player has no items"}
    end
    
    return items
end

-- Function to steal item
local function stealItem(playerName, itemName)
    local targetPlayer = Players:FindFirstChild(playerName)
    
    if not targetPlayer or not targetPlayer:FindFirstChild("Backpack") then
        print("âŒ Player or backpack not found!")
        return false
    end
    
    local backpack = targetPlayer.Backpack
    local targetItem = backpack:FindFirstChild(itemName)
    
    if targetItem and (targetItem:IsA("Tool") or targetItem:IsA("HopperBin")) then
        local success, err = pcall(function()
            local clonedItem = targetItem:Clone()
            clonedItem.Parent = player.Backpack
        end)
        
        if success then
            print("âœ… Successfully copied: " .. itemName .. " from " .. playerName)
            return true
        else
            print("âŒ Error copying item: " .. tostring(err))
            return false
        end
    else
        print("âŒ Item '" .. itemName .. "' not found in " .. playerName .. "'s backpack")
        return false
    end
end

-- Function to steal all items
local function stealAllItems(playerName)
    local targetPlayer = Players:FindFirstChild(playerName)
    
    if not targetPlayer or not targetPlayer:FindFirstChild("Backpack") then
        print("âŒ Player or backpack not found!")
        return 0
    end
    
    local backpack = targetPlayer.Backpack
    local stolenCount = 0
    
    for _, item in pairs(backpack:GetChildren()) do
        if item:IsA("Tool") or item:IsA("HopperBin") then
            local success, err = pcall(function()
                local clonedItem = item:Clone()
                clonedItem.Parent = player.Backpack
                stolenCount = stolenCount + 1
            end)
            
            if not success then
                print("âŒ Error copying " .. item.Name .. ": " .. tostring(err))
            end
        end
    end
    
    print("âœ… Successfully copied " .. stolenCount .. " items from " .. playerName)
    return stolenCount
end

-- Function to create/recreate the GUI
local function createGUI()
    -- Destroy existing GUI
    if screenGui then
        screenGui:Destroy()
    end
    
    -- Create fresh GUI
    window = DrRayLibrary:Load("Fryzer Hub", "Default")
    tab = DrRayLibrary.newTab("Fruit Stealer", "ImageIdHere")
    
    -- Get fresh data
    local playerNames = getPlayerNames()
    local currentItems = getCurrentPlayerItems()
    
    -- Create Player Selection Dropdown
    tab.newDropdown("Select Player", "Choose a player to steal from", playerNames, function(selectedPlayer)
        if selectedPlayer == "No other players" then
            print("âŒ No other players available")
            return
        end
        
        currentSelectedPlayer = selectedPlayer
        print("ğŸ‘¤ Selected player: " .. selectedPlayer)
        
        -- Show their items in console
        local items = getPlayerItems(selectedPlayer)
        if #items > 0 then
            print("ğŸ“¦ " .. selectedPlayer .. "'s items:")
            for i, item in ipairs(items) do
                print("  " .. i .. ". " .. item)
            end
            print("ğŸ’¡ Now refresh the GUI to see updated items in the dropdown!")
        else
            print("ğŸ“¦ " .. selectedPlayer .. " has no items")
        end
    end)
    
    -- Create Item Selection Dropdown (with current player's items)
    tab.newDropdown("Select Item", "Choose item to steal (refresh GUI after selecting player)", currentItems, function(selectedItem)
        if selectedItem == "Select a player first" or selectedItem == "Player has no items" then
            print("âŒ Please select a valid player first!")
            return
        end
        
        currentSelectedItem = selectedItem
        print("ğŸ¯ Selected item: " .. selectedItem)
        
        if currentSelectedPlayer then
            print("Ready to steal '" .. selectedItem .. "' from " .. currentSelectedPlayer)
        end
    end)
    
    -- Buttons
    tab.newButton("ğŸ”„ Refresh GUI", "Update dropdowns with fresh data", function()
        print("ğŸ”„ Refreshing GUI with latest data...")
        createGUI()
        window:Open()
        print("âœ… GUI refreshed! Dropdowns now show current data.")
    end)
    
    tab.newButton("ğŸ“‹ Show Player Items", "Display selected player's current items", function()
        if not currentSelectedPlayer then
            print("âŒ Please select a player first!")
            return
        end
        
        local items = getPlayerItems(currentSelectedPlayer)
        if #items > 0 then
            print("ğŸ“¦ " .. currentSelectedPlayer .. "'s current items:")
            for i, item in ipairs(items) do
                print("  " .. i .. ". " .. item)
            end
        else
            print("ğŸ“¦ " .. currentSelectedPlayer .. " has no items")
        end
    end)
    
    tab.newButton("ğŸ¯ Steal Selected Item", "Copy selected item to your backpack", function()
        if not currentSelectedPlayer then
            print("âŒ Please select a player first!")
            return
        end
        
        if not currentSelectedItem or currentSelectedItem == "Select a player first" or currentSelectedItem == "Player has no items" then
            print("âŒ Please select a valid item first!")
            return
        end
        
        stealItem(currentSelectedPlayer, currentSelectedItem)
    end)
    
    tab.newButton("ğŸ’° Steal All Items", "Copy all items from selected player", function()
        if not currentSelectedPlayer then
            print("âŒ Please select a player first!")
            return
        end
        
        stealAllItems(currentSelectedPlayer)
    end)
    
    tab.newButton("ğŸ‘¥ List All Players", "Show all available players and their items", function()
        local players = Players:GetPlayers()
        print("ğŸŒ === ALL PLAYERS AND THEIR ITEMS ===")
        
        for _, p in ipairs(players) do
            if p ~= player then
                local items = getPlayerItems(p.Name)
                print("ğŸ‘¤ " .. p.Name .. " (" .. #items .. " items):")
                if #items > 0 then
                    for i, item in ipairs(items) do
                        print("  â€¢ " .. item)
                    end
                else
                    print("  (no items)")
                end
                print("")
            end
        end
        print("=====================================")
    end)
    
    -- Store reference to GUI
    screenGui = player.PlayerGui:FindFirstChild("DrRay")
    
    print("âœ… GUI Created Successfully!")
end

-- Auto-refresh on player changes
Players.PlayerAdded:Connect(function(newPlayer)
    wait(1)
    print("ğŸ‘‹ " .. newPlayer.Name .. " joined! Click 'ğŸ”„ Refresh GUI' to update dropdowns.")
end)

Players.PlayerRemoving:Connect(function(leavingPlayer)
    if currentSelectedPlayer == leavingPlayer.Name then
        currentSelectedPlayer = nil
        currentSelectedItem = nil
        print("ğŸ˜¢ Your selected player (" .. leavingPlayer.Name .. ") left the game!")
    end
    print("ğŸ‘‹ " .. leavingPlayer.Name .. " left! Click 'ğŸ”„ Refresh GUI' to update dropdowns.")
end)

-- Initial GUI creation
createGUI()
window:Toggle()
window:Open()

print("ğŸš€ === FRUIT STEALER LOADED ===")
print("ğŸ“‹ HOW TO USE:")
print("1ï¸âƒ£ Select a player from the first dropdown")
print("2ï¸âƒ£ Click 'ğŸ”„ Refresh GUI' to update the items dropdown")
print("3ï¸âƒ£ Select an item from the second dropdown")
print("4ï¸âƒ£ Click 'ğŸ¯ Steal Selected Item' or 'ğŸ’° Steal All Items'")
print("ğŸ’¡ TIP: Always refresh GUI after selecting a new player!")
print("===============================")

-- Utility function to manually refresh (you can call this)
_G.refreshFruitStealer = function()
    createGUI()
    window:Open()
    print("âœ… Fruit Stealer GUI manually refreshed!")
end

print("ğŸ”§ You can also manually refresh by typing: _G.refreshFruitStealer()")
