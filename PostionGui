glideStroke.Parent = glideButton

-- Dragging functionality
local dragging = false
local dragStart = nil
local startPos = nil

local function updateInput(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

-- Make the entire main frame draggable
mainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

mainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        if dragging then
            updateInput(input)
        end
    end
end)

-- Also make title draggable
titleLabel.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

titleLabel.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        if dragging then
            updateInput(input)
        end
    end
end)

-- Button functionality with your loadstring commands
speedButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ProGamerBoy610/Button-gui/refs/heads/main/Speed%20Bosst%20Gui"))()
end)

glideButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ProGamerBoy610/Button-gui/refs/heads/main/GLIDE%20button%20gui%20for%20steal%20a%20brianrot.lua"))()
end)

-- Enhanced hover effects for buttons
speedButton.MouseEnter:Connect(function()
    speedButton.Size = UDim2.new(0.5, -5, 0, 50)
    speedStroke.Transparency = 0.1
    speedStroke.Thickness = 3
end)

speedButton.MouseLeave:Connect(function()
    speedButton.Size = UDim2.new(0.5, -5, 0, 45)
    speedStroke.Transparency = 0.4
    speedStroke.Thickness = 2
end)

glideButton.MouseEnter:Connect(function()
    glideButton.Size = UDim2.new(0.5, -5, 0, 50)
    glideStroke.Transparency = 0.1
    glideStroke.Thickness = 3
end)

glideButton.MouseLeave:Connect(function()
    glideButton.Size = UDim2.new(0.5, -5, 0, 45)
    glideStroke.Transparency = 0.4
    glideStroke.Thickness = 2
end)

-- Add pulsing animation to the main frame
spawn(function()
    while mainFrame.Parent do
        for i = 1, 20 do
            stroke.Transparency = 0.3 + (i * 0.01)
            wait(0.05)
        end
        for i = 1, 20 do
            stroke.Transparency = 0.5 - (i * 0.01)
            wait(0.05)
        end
    end
end)
