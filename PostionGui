    performanceMode = state
    print("âœ… Performance Mode", state and "ON" or "OFF")
    if state then
        print("ðŸ“ Performance mode reduces update frequency")
    end
end)

-- Status Display Button
Library:CreateButton(autoTab, "Show Status", function()
    print("=== AUTO SYSTEMS STATUS ===")
    print("ðŸŒ³ Auto Chop Tree:", ActiveAutoChopTree and "ON" or "OFF")
    print("âš”ï¸ Kill Aura:", ActiveKillAura and "ON" or "OFF") 
    print("ðŸ”§ Auto Equip:", autoEquipEnabled and "ON" or "OFF")
    print("ðŸ“¦ Auto Collect:", autoCollectEnabled and "ON" or "OFF")
    print("ðŸ›¡ï¸ Safe Mode:", safeMode and "ON" or "OFF")
    print("âš¡ Performance Mode:", performanceMode and "ON" or "OFF")
    print("ðŸŒ³ Trees Chopped:", treesChopped)
    print("âš”ï¸ Enemies Killed:", enemiesKilled)
    
    local bestTool = getBestTool()
    print("ðŸ”§ Best Available Tool:", bestTool and bestTool.Name or "None")
    print("========================")
end)

-- Emergency Stop Button
Library:CreateButton(mainTab, "Emergency Stop All", function()
    ActiveAutoChopTree = false
    ActiveKillAura = false
    autoEquipEnabled = false
    autoCollectEnabled = false
    
    if autoChopConnection then task.cancel(autoChopConnection) end
    if killAuraConnection then task.cancel(killAuraConnection) end
    
    print("ðŸš¨ Emergency stop activated - All auto systems disabled!")
end)

