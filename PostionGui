-- Roblox Script to Teleport to MaximGun VehicleSeat and sit in it
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Function to recursively search for MaximGun model in nested folders
local function findMaximGun(parent)
    for _, child in pairs(parent:GetChildren()) do
        if child.Name == "MaximGun" and child:IsA("Model") then
            return child
        elseif child:IsA("Folder") or child:IsA("Model") then
            local found = findMaximGun(child)
            if found then
                return found
            end
        end
    end
    return nil
end

-- Function to find VehicleSeat inside MaximGun model
local function findVehicleSeat(model)
    for _, child in pairs(model:GetDescendants()) do
        if child:IsA("VehicleSeat") then
            return child
        end
    end
    return nil
end

-- Main teleport and sit function
local function teleportAndSit()
    -- Find MaximGun model
    local maximGun = findMaximGun(workspace)
    
    if not maximGun then
        warn("MaximGun model not found!")
        return
    end
    
    -- Find VehicleSeat inside MaximGun
    local vehicleSeat = findVehicleSeat(maximGun)
    
    if not vehicleSeat then
        warn("VehicleSeat not found in MaximGun model!")
        return
    end
    
    -- Teleport player to the VehicleSeat position
    local seatPosition = vehicleSeat.Position
    humanoidRootPart.CFrame = CFrame.new(seatPosition + Vector3.new(0, 5, 0))
    
    -- Wait a moment for teleportation to complete
    wait(0.1)
    
    -- Sit the player in the VehicleSeat
    vehicleSeat:Sit(humanoid)
    
    print("Successfully teleported to and sat in MaximGun VehicleSeat!")
end

-- Execute the function
teleportAndSit()
