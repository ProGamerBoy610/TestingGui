ToggleButtonCircle.BackgroundTransparency = 1
ToggleButtonCircle.Size = UDim2.new(1, 0, 1, 0)
ToggleButtonCircle.Text = ""
ToggleButtonCircle.ZIndex = 4

local CircleTextLabel = Instance.new("TextLabel")
CircleTextLabel.Name = "TextLabel"
CircleTextLabel.Parent = CircleFrame
CircleTextLabel.BackgroundTransparency = 1
CircleTextLabel.Size = UDim2.new(1, 0, 1, 0)
CircleTextLabel.Font = Enum.Font.GothamBold
CircleTextLabel.Text = "Fryzer"
