local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local Workspace = game:GetService("Workspace")

-- âœ… Teleport to a tool
local function tpToTool(tool)
    local char = lp.Character or lp.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")
    hrp.CFrame = tool.Handle.CFrame + Vector3.new(0, 3, 0)
    print("[ðŸ”«] Teleported to gun!")
end

-- âœ… Check workspace for gun tool and teleport to it
task.spawn(function()
    while true do
        for _, item in ipairs(Workspace:GetChildren()) do
            if item:IsA("Tool") and item.Name == "Gun" and item:FindFirstChild("Handle") then
                tpToTool(item)
                return
            end
        end
        task.wait(0.2)
    end
end)
