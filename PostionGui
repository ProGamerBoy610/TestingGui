-- Load WindUI Library
local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

WindUI:SetNotificationLower(true)

-- Add Custom Theme
WindUI:AddTheme({
    Name = "My Theme",
    Accent = Color3.fromHex("#18181b"),
    Dialog = Color3.fromHex("#161616"),
    Outline = Color3.fromHex("#FFFFFF"),
    Text = Color3.fromHex("#FFFFFF"),
    Placeholder = Color3.fromHex("#7a7a7a"),
    Background = Color3.fromHex("#101010"),
    Button = Color3.fromHex("#52525b"),
    Icon = Color3.fromHex("#a1a1aa")
})

-- Create Main Window (BIGGER SIZE + SCROLLING ENABLED)
local Window = WindUI:CreateWindow({
    Title = "My Super Hub",
    Icon = "door-open",
    Author = "by .ftgs and .ftgs",
    Folder = "MySuperHub",
    Size = UDim2.fromOffset(700, 550),
    MinSize = Vector2.new(650, 500),
    MaxSize = Vector2.new(1000, 700),
    Transparent = true,
    Theme = "My Theme",
    Resizable = true,
    SideBarWidth = 220,
    BackgroundImageTransparency = 0.42,
    HideSearchBar = false,
    ScrollBarEnabled = true,
    User = {
        Enabled = true,
        Anonymous = true,
        Callback = function()
            print("clicked")
        end,
    },
})

-- Edit Open Button
Window:EditOpenButton({
    Title = "Open Example UI",
    Icon = "monitor",
    CornerRadius = UDim.new(0,16),
    StrokeThickness = 2,
    Color = ColorSequence.new(
        Color3.fromHex("FF0F7B"), 
        Color3.fromHex("F89B29")
    ),
    OnlyMobile = false,
    Enabled = true,
    Draggable = true,
})

-- Add Version Tag
Window:Tag({
    Title = "v1.6.4",
    Color = Color3.fromHex("#30ff6a"),
    Radius = 8,
})

-- Send Notification
WindUI:Notify({
    Title = "Hub Loaded",
    Content = "All components are ready to use!",
    Duration = 4,
    Icon = "check-circle",
})

-- ==================== TAB 1: BUTTONS ====================
local Tab1 = Window:Tab({
    Title = "Buttons",
    Icon = "mouse-pointer-click",
})

Tab1:Select()

Tab1:Section({
    Title = "Button Examples",
    Icon = "circle",
    Opened = true,
})

Tab1:Button({
    Title = "Button 1",
    Desc = "First Test Button",
    Callback = function()
        print("Button 1 clicked")
    end
})

Tab1:Button({
    Title = "Button 2",
    Desc = "Second Test Button",
    Callback = function()
        print("Button 2 clicked")
    end
})

Tab1:Button({
    Title = "Button 3",
    Desc = "Third Test Button",
    Callback = function()
        print("Button 3 clicked")
    end
})

Tab1:Button({
    Title = "Button 4",
    Desc = "Fourth Test Button",
    Callback = function()
        print("Button 4 clicked")
    end
})

-- ==================== TAB 2: TOGGLES ====================
local Tab2 = Window:Tab({
    Title = "Toggles",
    Icon = "toggle-left",
})

Tab2:Section({
    Title = "Checkbox Toggles",
    Icon = "check-square",
    Opened = true,
})

Tab2:Toggle({
    Title = "Checkbox Toggle 1",
    Desc = "First Checkbox Toggle",
    Icon = "check",
    Type = "Checkbox",
    Default = false,
    Callback = function(state)
        print("Checkbox 1: " .. tostring(state))
    end
})

Tab2:Toggle({
    Title = "Checkbox Toggle 2",
    Desc = "Second Checkbox Toggle",
    Icon = "check-check",
    Type = "Checkbox",
    Default = true,
    Callback = function(state)
        print("Checkbox 2: " .. tostring(state))
    end
})

Tab2:Divider()

Tab2:Section({
    Title = "Switch Toggles",
    Icon = "power",
    Opened = true,
})

Tab2:Toggle({
    Title = "Switch Toggle 1",
    Desc = "First Switch Toggle",
    Icon = "zap",
    Type = "Switch",
    Default = false,
    Callback = function(state)
        print("Switch 1: " .. tostring(state))
    end
})

Tab2:Toggle({
    Title = "Switch Toggle 2",
    Desc = "Second Switch Toggle",
    Icon = "bolt",
    Type = "Switch",
    Default = true,
    Callback = function(state)
        print("Switch 2: " .. tostring(state))
    end
})

-- ==================== TAB 3: SLIDERS ====================
local Tab3 = Window:Tab({
    Title = "Sliders",
    Icon = "sliders",
})

Tab3:Section({
    Title = "Integer Sliders",
    Icon = "gauge",
    Opened = true,
})

Tab3:Slider({
    Title = "Speed Slider",
    Step = 1,
    Value = {
        Min = 0,
        Max = 100,
        Default = 50,
    },
    Callback = function(value)
        print("Speed: " .. value)
    end
})

Tab3:Slider({
    Title = "Power Slider",
    Step = 5,
    Value = {
        Min = 10,
        Max = 200,
        Default = 100,
    },
    Callback = function(value)
        print("Power: " .. value)
    end
})

Tab3:Divider()

Tab3:Section({
    Title = "Float Sliders",
    Icon = "activity",
    Opened = true,
})

Tab3:Slider({
    Title = "Precision Slider",
    Step = 0.1,
    Value = {
        Min = 0,
        Max = 10,
        Default = 5,
    },
    Callback = function(value)
        print("Precision: " .. value)
    end
})

