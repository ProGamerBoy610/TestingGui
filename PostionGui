local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local GuiService = game:GetService("GuiService")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Remove existing GUIs if they exist
if PlayerGui:FindFirstChild("FryzerModernHub") then
    PlayerGui:FindFirstChild("FryzerModernHub"):Destroy()
end
if PlayerGui:FindFirstChild("FryzerToggleGUI") then
    PlayerGui:FindFirstChild("FryzerToggleGUI"):Destroy()
end

local Config = {
    Colors = {
        Primary = Color3.fromRGB(10, 10, 10),
        Secondary = Color3.fromRGB(18, 18, 18),
        Tertiary = Color3.fromRGB(25, 25, 25),
        White = Color3.fromRGB(255, 255, 255),
        WhiteDim = Color3.fromRGB(200, 200, 200),
        Purple = Color3.fromRGB(138, 43, 226),
        Red = Color3.fromRGB(220, 38, 38),
        Orange = Color3.fromRGB(249, 115, 22),
        Yellow = Color3.fromRGB(250, 204, 21),
        Success = Color3.fromRGB(34, 197, 94),
        Border = Color3.fromRGB(45, 45, 45),
        Shadow = Color3.fromRGB(0, 0, 0),
    },
    Animations = {
        Fast = TweenInfo.new(0.15, Enum.EasingStyle.Quad),
        Normal = TweenInfo.new(0.25, Enum.EasingStyle.Quad),
        Slow = TweenInfo.new(0.4, Enum.EasingStyle.Quad),
        Bounce = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
    },
    CircleSize = 60,
    CirclePosition = {
        X = 100,
        Y = 200
    }
}

local Library = {}
Library.Tabs = {}
Library.CurrentTab = nil
Library.TransparencyEnabled = false
Library.OpenDropdowns = {}

-- ============================
-- MAIN HUB GUI CREATION
-- ============================

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FryzerModernHub"
ScreenGui.Parent = PlayerGui
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.DisplayOrder = 100
ScreenGui.Enabled = true

local DropdownOverlay = Instance.new("Frame")
DropdownOverlay.Name = "DropdownOverlay"
DropdownOverlay.Parent = ScreenGui
DropdownOverlay.BackgroundTransparency = 1
DropdownOverlay.Size = UDim2.new(1, 0, 1, 0)
DropdownOverlay.Position = UDim2.new(0, 0, 0, 0)
DropdownOverlay.BorderSizePixel = 0
DropdownOverlay.Visible = false
DropdownOverlay.ZIndex = 150

DropdownOverlay.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        for i = #Library.OpenDropdowns, 1, -1 do
            local dropdown = Library.OpenDropdowns[i]
            if dropdown and dropdown.Parent then
                dropdown.Visible = false
                local valueButton = dropdown.Parent:FindFirstChild("ValueButton")
                if valueButton then
                    local arrow = valueButton:FindFirstChild("Arrow")
                    if arrow then
                        arrow.Text = "v"
                    end
                end
            end
            table.remove(Library.OpenDropdowns, i)
        end
        DropdownOverlay.Visible = false
    end
end)

spawn(function()
    while ScreenGui.Parent do
        wait(0.5)
        local shouldHideOverlay = true
        for _, dropdown in pairs(Library.OpenDropdowns) do
            if dropdown and dropdown.Parent and dropdown.Visible then
                shouldHideOverlay = false
                break
            end
        end
        if shouldHideOverlay and DropdownOverlay.Visible then
            DropdownOverlay.Visible = false
        end
    end
end)

