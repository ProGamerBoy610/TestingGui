local InfoTab = Library:CreateTab("INFO")
local HomeTab = Library:CreateTab("HOME")
local SettingsTab = Library:CreateTab("SETTINGS")

Library:CreateSection(InfoTab, "Player Information Dashboard")
Library:CreateLabel(InfoTab, "FRYZER HUB - MODERN EDITION")
Library:CreateSpace(InfoTab, 4)

local Player = Players.LocalPlayer
local PlayerName = Player.DisplayName ~= "" and Player.DisplayName or Player.Name
local AccountAge = Player.AccountAge
local GameName = "Unknown Game"

pcall(function()
    GameName = game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name
end)

Library:CreateButton(InfoTab, {
    Title = "Player: " .. PlayerName,
    Desc = "Username: @" .. Player.Name,
    Callback = function() 
        print("Player Name:", PlayerName)
        print("User ID:", Player.UserId)
    end
})

Library:CreateButton(InfoTab, {
    Title = "Account Age: " .. AccountAge .. " days",
    Desc = "Current user information",
    Callback = function() print("Account Age:", AccountAge) end
})

Library:CreateButton(InfoTab, {
