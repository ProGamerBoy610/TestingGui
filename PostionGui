    Callback = function(value)
        print("Multiplier: " .. value)
    end
})

-- ==================== TAB 4: DROPDOWNS ====================
local Tab4 = Window:Tab({
    Title = "Dropdowns",
    Icon = "chevron-down",
})

Tab4:Section({
    Title = "Single Select Dropdowns",
    Icon = "list",
    Opened = true,
})

Tab4:Dropdown({
    Title = "Option Dropdown",
    Values = { "Option A", "Option B", "Option C", "Option D" },
    Value = "Option A",
    Callback = function(option)
        print("Selected: " .. option)
    end
})

Tab4:Dropdown({
    Title = "Color Dropdown",
    Values = { "Red", "Blue", "Green", "Yellow", "Purple" },
    Value = "Red",
    Callback = function(option)
        print("Color: " .. option)
    end
})

Tab4:Divider()

Tab4:Section({
    Title = "Multi-Select Dropdowns",
    Icon = "check-square",
    Opened = true,
})

Tab4:Dropdown({
    Title = "Categories (Multi)",
    Values = { "Category A", "Category B", "Category C", "Category D" },
    Value = { "Category A" },
    Multi = true,
    AllowNone = true,
    Callback = function(options)
        print("Categories: " .. game:GetService("HttpService"):JSONEncode(options))
    end
})

Tab4:Dropdown({
    Title = "Items (Multi)",
    Values = { "Item 1", "Item 2", "Item 3", "Item 4", "Item 5" },
    Value = { "Item 1", "Item 2" },
    Multi = true,
    AllowNone = false,
    Callback = function(options)
        print("Items: " .. game:GetService("HttpService"):JSONEncode(options))
    end
})

