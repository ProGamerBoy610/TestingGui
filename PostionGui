local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local Workspace = game:GetService("Workspace")

Workspace.ChildAdded:Connect(function(child)
	if child:IsA("Part") and child.Name == "Ray" then -- MM2 bullet is usually named "Ray"
		-- Check if bullet is near you
		local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
		if hrp and (child.Position - hrp.Position).Magnitude < 10 then
			-- Disable collision between bullet and your character
			for _, part in ipairs(lp.Character:GetChildren()) do
				if part:IsA("BasePart") then
					child:CanCollideWith(part, false)
				end
			end
		end
	end
end)
