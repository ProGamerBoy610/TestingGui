            Duration = 3
        })
    end
})

-- Dropdown for speed
Tabs.BringTab:Dropdown({
    Title = "⚡ Speed Mode",
    Desc = "Select bringing speed: Slow, Fast, Ultra",
    Options = {"Slow", "Fast", "Ultra"},
    Multi = false,
    Default = "Slow",
    Callback = function(selected)
        speedMode = selected
        print("Speed Mode:", speedMode)
        WindUI:Notify({
            Title = "⚡ Speed Updated",
            Content = speedMode .. " mode activated!",
            Duration = 3
        })
    end
})

Tabs.BringTab:Toggle({
    Title = "🔄 Start Selective Bring System", 
    Desc = "Enable continuous bringing of selected items only",
    Value = false,
    Callback = function(state)
        if state then
            if not isSystemRunning then
                startSelectiveBring()
            else
                WindUI:Notify({
                    Title = "⚠️ Already Running",
                    Content = "System is already active!",
                    Duration = 3
                })
            end
        else
            if isSystemRunning then
                stopBringing()
            end
        end
        print("Selective Bring System:", state and "ENABLED" or "DISABLED")
    end
})

-- Manual sections with dropdowns and toggles
-- Fuel Section: Dropdown for multi-selection (excluding Log), separate toggle for Log
local fuelOptions = {}
for itemName, itemData in pairs(itemSections["Fuel"].items) do
    if itemName ~= "Log" then
        table.insert(fuelOptions, itemData.displayName)
    end
end

Tabs.BringTab:Paragraph({
    Title = itemSections["Fuel"].sectionIcon .. " Fuel Section",
    Content = "Select fuel items (multi-select) and toggle Log separately"
})

Tabs.BringTab:Dropdown({
    Title = "Fuel Items (Multi-Select)",
    Desc = "Select multiple fuel items to enable",
    Options = fuelOptions,
    Multi = true,
    Callback = function(selected)
        -- Disable all fuel except Log first
        for itemName, itemData in pairs(itemSections["Fuel"].items) do
            if itemName ~= "Log" then
                itemToggles[itemName].enabled = false
            end
        end
        -- Enable selected
        for _, sel in pairs(selected) do
            for itemName, itemData in pairs(itemSections["Fuel"].items) do
                if itemData.displayName == sel then
                    itemToggles[itemName].enabled = true
                    break
                end
            end
        end
        local enabledCount = getEnabledItemsCount()
        WindUI:Notify({
            Title = "Fuel Updated",
            Content = "Selected: " .. table.concat(selected, ", ") .. " | Total enabled: " .. enabledCount,
            Duration = 3
        })
    end
})

Tabs.BringTab:Toggle({
    Title = itemSections["Fuel"].items["Log"].displayName,
    Desc = "Toggle Log (Wood) separately",
    Value = false,
    Callback = function(state)
        itemToggles["Log"].enabled = state
        local enabledCount = getEnabledItemsCount()
        WindUI:Notify({
            Title = state and "✅ Log Enabled" or "❌ Log Disabled",
            Content = "Total enabled: " .. enabledCount,
            Duration = 2
        })
    end
})

-- Other sections with manual toggles (no auto)
for sectionName, sectionData in pairs(itemSections) do
    if sectionName ~= "Fuel" then
        Tabs.BringTab:Paragraph({
            Title = sectionData.sectionIcon .. " " .. sectionName,
            Content = "Toggle " .. sectionName:lower() .. " items on/off individually"
        })
        
        for itemName, itemData in pairs(sectionData.items) do
            Tabs.BringTab:Toggle({
                Title = itemData.displayName, 
                Desc = "Bring " .. itemName .. " items",
                Value = false,
                Callback = function(state)
                    itemToggles[itemName].enabled = state
                    print(itemName, "bringing:", state and "ENABLED" or "DISABLED")
                    
                    local enabledCount = getEnabledItemsCount()
                    WindUI:Notify({
                        Title = state and ("✅ " .. itemName .. " Enabled") or ("❌ " .. itemName .. " Disabled"),
                        Content = "Total enabled: " .. enabledCount .. " item types",
                        Duration = 2
                    })
                end
            })
        end
    end
end

Tabs.BringTab:Paragraph({
    Title = "⚡ Quick Section Selection",
    Content = "Quick buttons to enable/disable entire sections at once."
})

for sectionName, sectionData in pairs(itemSections) do
    Tabs.BringTab:Button({
        Title = sectionData.sectionIcon .. " Enable All " .. sectionName,
        Desc = "Enable all items in " .. sectionName .. " section",
        Callback = function()
            local itemNames = {}
            for itemName, itemData in pairs(sectionData.items) do
                itemToggles[itemName].enabled = true
                table.insert(itemNames, itemName)
            end
            WindUI:Notify({
                Title = sectionData.sectionIcon .. " " .. sectionName .. " Enabled",
                Content = "Enabled: " .. table.concat(itemNames, ", "),
                Duration = 4
            })
        end
    })
end

Tabs.BringTab:Button({
    Title = "❌ Disable All Items",
    Desc = "Turn off all item types",
    Callback = function()
        for itemName, itemData in pairs(itemToggles) do
            itemToggles[itemName].enabled = false
        end
        WindUI:Notify({
            Title = "❌ All Disabled",
            Content = "All item types disabled!",
            Duration = 3
        })
    end
})

