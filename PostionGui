-- MM2 Auto Coin Collector with Simple Toggle GUI

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- SETTINGS
local COIN_NAME = "Coin"
local TELEPORT_DELAY = 0.2
local FARM_ENABLED = false

-- GUI SETUP
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "AutoCoinGUI"

local toggleBtn = Instance.new("TextButton", screenGui)
toggleBtn.Size = UDim2.new(0, 160, 0, 40)
toggleBtn.Position = UDim2.new(0, 20, 0, 100)
toggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.TextScaled = true
toggleBtn.Text = "Auto Coin: OFF"
toggleBtn.Font = Enum.Font.GothamBold

-- Toggle Function
toggleBtn.MouseButton1Click:Connect(function()
	FARM_ENABLED = not FARM_ENABLED
	toggleBtn.Text = FARM_ENABLED and "Auto Coin: ON" or "Auto Coin: OFF"
	toggleBtn.BackgroundColor3 = FARM_ENABLED and Color3.fromRGB(0, 255, 100) or Color3.fromRGB(0, 170, 255)
end)

-- Coin Collection Loop
RunService.Heartbeat:Connect(function()
	if FARM_ENABLED then
		local coins = {}

		for _, obj in pairs(workspace:GetDescendants()) do
			if obj.Name == COIN_NAME and obj:IsA("Part") then
				table.insert(coins, obj)
			end
		end

		for _, coin in pairs(coins) do
			if not FARM_ENABLED then break end
			if humanoidRootPart and coin and coin.Parent then
				humanoidRootPart.CFrame = coin.CFrame + Vector3.new(0, 3, 0)
				wait(TELEPORT_DELAY)
			end
		end
	end
end)

print("üçØ Auto Coin Collect GUI Loaded")
