if success1 then
    print("âœ… Circle toggle loaded successfully")
else
    print("âŒ Circle toggle failed to load: " .. tostring(error1))
end

-- Step 2: Load main library
print("ğŸ“ Step 2: Loading main library...")
local success2, error2 = pcall(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ProGamerBoy610/Script-Hub/refs/heads/main/maintop.lua"))()
end)

if success2 then
    print("âœ… Main library loaded successfully")
else
    print("âŒ Main library failed to load: " .. tostring(error2))
end

-- Step 3: Check if Library exists
print("ğŸ“ Step 3: Checking for Library object...")
local waitTime = 0
while not Library and waitTime < 10 do
    wait(0.1)
    waitTime = waitTime + 0.1
    print("â³ Waiting for Library... (" .. waitTime .. "s)")
end

if Library then
    print("âœ… Library object found!")
    print("ğŸ“‹ Library methods available:")
    for key, value in pairs(Library) do
        if type(value) == "function" then
            print("  - " .. key .. "()")
        end
    end
else
    print("âŒ Library object not found after 10 seconds!")
    print("ğŸ”§ Creating basic fallback library...")
    
    -- Create a simple fallback library
    Library = {}
    function Library:CreateTab(name)
        print("ğŸ“ Tab created: " .. name)
        return {name = name}
    end
    function Library:CreateButton(tab, name, callback)
        print("ğŸ”˜ Button created: " .. name .. " in tab " .. (tab.name or "unknown"))
        return {name = name, callback = callback}
    end
    function Library:CreateToggle(tab, name, default, callback)
        print("ğŸ”„ Toggle created: " .. name .. " in tab " .. (tab.name or "unknown"))
        return {name = name, callback = callback}
    end
    function Library:CreateSlider(tab, name, min, max, default, callback)
        print("ğŸ“Š Slider created: " .. name .. " in tab " .. (tab.name or "unknown"))
        return {name = name, callback = callback}
    end
    function Library:CreateDropdown(tab, name, options, default, callback)
        print("ğŸ“‹ Dropdown created: " .. name .. " in tab " .. (tab.name or "unknown"))
        return {name = name, callback = callback}
    end
    function Library:CreateTextBox(tab, name, placeholder, callback)
        print("ğŸ“ TextBox created: " .. name .. " in tab " .. (tab.name or "unknown"))
        return {name = name, callback = callback}
    end
    function Library:CreateLabel(tab, text)
        print("ğŸ·ï¸ Label created: " .. text .. " in tab " .. (tab.name or "unknown"))
        return {text = text}
    end
    function Library:CreateTextLabel(tab, text, color)
        print("ğŸ“„ TextLabel created: " .. text .. " in tab " .. (tab.name or "unknown"))
        return {text = text}
    end
end

-- Step 4: Check if Config exists
print("ğŸ“ Step 4: Checking for Config object...")
if not Config then
    print("âš ï¸ Config not found, creating default config...")
    Config = {
        Colors = {
            Background = Color3.fromRGB(25, 25, 25),
            Accent = Color3.fromRGB(0, 162, 255),
            Primary = Color3.fromRGB(70, 130, 255),
            Success = Color3.fromRGB(46, 204, 113),
