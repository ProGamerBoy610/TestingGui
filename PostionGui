local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local lp = Players.LocalPlayer

-- ✅ Teleport to any valid part
local function teleportTo(cframe)
	local char = lp.Character or lp.CharacterAdded:Wait()
	local hrp = char:WaitForChild("HumanoidRootPart")
	hrp.CFrame = cframe + Vector3.new(0, 3, 0)
	print("[🔫] Teleported to GunDrop!")
end

-- ✅ Check if GunDrop already exists
local function checkGunDrop()
	local gun = Workspace:FindFirstChild("GunDrop")
	if gun then
		if gun:IsA("Part") then
			teleportTo(gun.CFrame)
			return true
		elseif gun:IsA("Model") then
			local part = gun:FindFirstChildWhichIsA("BasePart")
			if part then
				teleportTo(part.CFrame)
				return true
			end
		end
	end
	return false
end

-- ✅ Watch for GunDrop appearing
Workspace.ChildAdded:Connect(function(child)
	if child.Name == "GunDrop" then
		task.wait(0.2)
		if child:IsA("Part") then
			teleportTo(child.CFrame)
		elseif child:IsA("Model") then
			local part = child:FindFirstChildWhichIsA("BasePart")
			if part then
				teleportTo(part.CFrame)
			end
		end
	end
end)

-- 🔁 In case the gun already exists when you execute
if not checkGunDrop() then
	print("[👁️] Watching for GunDrop...")
end
