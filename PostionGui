function Library:CreateButton(tab, config)
    local ButtonFrame = Instance.new("Frame")
    ButtonFrame.Name = "Button_" .. config.Title
    ButtonFrame.Parent = tab.Content
    ButtonFrame.BackgroundColor3 = Config.Colors.Tertiary
    ButtonFrame.BorderSizePixel = 0
    ButtonFrame.Size = UDim2.new(1, 0, 0, config.Desc and 55 or 40)
    ButtonFrame.LayoutOrder = #tab.Components + 1
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 6)
    ButtonCorner.Parent = ButtonFrame
    
    local ButtonStroke = Instance.new("UIStroke")
    ButtonStroke.Color = Config.Colors.Border
    ButtonStroke.Thickness = 1
    ButtonStroke.Parent = ButtonFrame
    
    local Button = Instance.new("TextButton")
    Button.Parent = ButtonFrame
    Button.BackgroundTransparency = 1
    Button.Size = UDim2.new(1, 0, 1, 0)
    Button.Text = ""
    Button.AutoButtonColor = false
    
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Parent = ButtonFrame
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Size = UDim2.new(1, -60, 0, 18)
    TitleLabel.Position = UDim2.new(0, 12, 0, config.Desc and 8 or 11)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.Text = config.Title
    TitleLabel.TextColor3 = Config.Colors.White
    TitleLabel.TextSize = 12
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    
    if config.Desc then
        local DescLabel = Instance.new("TextLabel")
        DescLabel.Parent = ButtonFrame
        DescLabel.BackgroundTransparency = 1
        DescLabel.Size = UDim2.new(1, -60, 0, 14)
        DescLabel.Position = UDim2.new(0, 12, 0, 28)
        DescLabel.Font = Enum.Font.Gotham
        DescLabel.Text = config.Desc
        DescLabel.TextColor3 = Config.Colors.WhiteDim
        DescLabel.TextSize = 10
        DescLabel.TextXAlignment = Enum.TextXAlignment.Left
    end
    
    local StatusDot = Instance.new("Frame")
    StatusDot.Parent = ButtonFrame
    StatusDot.BackgroundColor3 = Config.Colors.Border
    StatusDot.BorderSizePixel = 0
    StatusDot.Size = UDim2.new(0, 8, 0, 8)
    StatusDot.Position = UDim2.new(1, -18, 0.5, -4)
    
    local DotCorner = Instance.new("UICorner")
    DotCorner.CornerRadius = UDim.new(1, 0)
    DotCorner.Parent = StatusDot
    
    Button.MouseButton1Click:Connect(function()
        TweenService:Create(StatusDot, Config.Animations.Fast, {
            BackgroundColor3 = Config.Colors.Success,
            Size = UDim2.new(0, 12, 0, 12)
        }):Play()
        
        if config.Callback then
            config.Callback()
        end
        
        wait(0.5)
        TweenService:Create(StatusDot, Config.Animations.Normal, {
            BackgroundColor3 = Config.Colors.Border,
            Size = UDim2.new(0, 8, 0, 8)
        }):Play()
    end)
    
    Button.MouseEnter:Connect(function()
        TweenService:Create(ButtonFrame, Config.Animations.Fast, {
            BackgroundColor3 = Config.Colors.Secondary
        }):Play()
        TweenService:Create(ButtonStroke, Config.Animations.Fast, {
            Color = Config.Colors.Purple
        }):Play()
    end)
    
    Button.MouseLeave:Connect(function()
        TweenService:Create(ButtonFrame, Config.Animations.Fast, {
            BackgroundColor3 = Config.Colors.Tertiary
        }):Play()
        TweenService:Create(ButtonStroke, Config.Animations.Fast, {
            Color = Config.Colors.Border
        }):Play()
    end)
    
    table.insert(tab.Components, ButtonFrame)
    return ButtonFrame
end

function Library:CreateToggle(tab, config)
    local ToggleFrame = Instance.new("Frame")
    ToggleFrame.Name = "Toggle_" .. config.Title
    ToggleFrame.Parent = tab.Content
    ToggleFrame.BackgroundColor3 = Config.Colors.Tertiary
    ToggleFrame.BorderSizePixel = 0
    ToggleFrame.Size = UDim2.new(1, 0, 0, config.Desc and 55 or 40)
    ToggleFrame.LayoutOrder = #tab.Components + 1
    
    local ToggleCorner = Instance.new("UICorner")
    ToggleCorner.CornerRadius = UDim.new(0, 6)
    ToggleCorner.Parent = ToggleFrame
    
    local ToggleStroke = Instance.new("UIStroke")
    ToggleStroke.Color = Config.Colors.Border
    ToggleStroke.Thickness = 1
    ToggleStroke.Parent = ToggleFrame
    
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Parent = ToggleFrame
    ToggleButton.BackgroundTransparency = 1
    ToggleButton.Size = UDim2.new(1, 0, 1, 0)
    ToggleButton.Text = ""
    
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Parent = ToggleFrame
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Size = UDim2.new(1, -50, 0, 18)
    TitleLabel.Position = UDim2.new(0, 12, 0, config.Desc and 8 or 11)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.Text = config.Title
    TitleLabel.TextColor3 = Config.Colors.White
    TitleLabel.TextSize = 12
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    
    if config.Desc then
        local DescLabel = Instance.new("TextLabel")
        DescLabel.Parent = ToggleFrame
        DescLabel.BackgroundTransparency = 1
        DescLabel.Size = UDim2.new(1, -50, 0, 14)
        DescLabel.Position = UDim2.new(0, 12, 0, 28)
        DescLabel.Font = Enum.Font.Gotham
        DescLabel.Text = config.Desc
        DescLabel.TextColor3 = Config.Colors.WhiteDim
        DescLabel.TextSize = 10
        DescLabel.TextXAlignment = Enum.TextXAlignment.Left
    end
    
    local CheckboxBg = Instance.new("Frame")
    CheckboxBg.Parent = ToggleFrame
    CheckboxBg.BackgroundColor3 = Config.Colors.Secondary
    CheckboxBg.BorderSizePixel = 0
    CheckboxBg.Size = UDim2.new(0, 18, 0, 18)
    CheckboxBg.Position = UDim2.new(1, -26, 0.5, -9)
    
    local CheckboxCorner = Instance.new("UICorner")
    CheckboxCorner.CornerRadius = UDim.new(0, 4)
    CheckboxCorner.Parent = CheckboxBg
    
    local CheckboxStroke = Instance.new("UIStroke")
    CheckboxStroke.Color = Config.Colors.Border
    CheckboxStroke.Thickness = 1
    CheckboxStroke.Parent = CheckboxBg
    
    local Checkmark = Instance.new("TextLabel")
    Checkmark.Parent = CheckboxBg
    Checkmark.BackgroundTransparency = 1
    Checkmark.Size = UDim2.new(1, 0, 1, 0)
    Checkmark.Font = Enum.Font.GothamBold
    Checkmark.Text = "V"
    Checkmark.TextColor3 = Config.Colors.White
    Checkmark.TextSize = 14
    Checkmark.Visible = config.Default or false
    
    local isToggled = config.Default or false
    
    ToggleButton.MouseButton1Click:Connect(function()
        isToggled = not isToggled
        Checkmark.Visible = isToggled
        
        TweenService:Create(CheckboxBg, Config.Animations.Normal, {
            BackgroundColor3 = isToggled and Config.Colors.Purple or Config.Colors.Secondary
        }):Play()
        TweenService:Create(CheckboxStroke, Config.Animations.Normal, {
            Color = isToggled and Config.Colors.Purple or Config.Colors.Border
        }):Play()
        
        if config.Callback then
            config.Callback(isToggled)
        end
    end)
    
    ToggleButton.MouseEnter:Connect(function()
        TweenService:Create(ToggleFrame, Config.Animations.Fast, {
            BackgroundColor3 = Config.Colors.Secondary
        }):Play()
    end)
    
    ToggleButton.MouseLeave:Connect(function()
        TweenService:Create(ToggleFrame, Config.Animations.Fast, {
            BackgroundColor3 = Config.Colors.Tertiary
        }):Play()
    end)
    
    table.insert(tab.Components, ToggleFrame)
    return {Frame = ToggleFrame, SetValue = function(val) isToggled = val Checkmark.Visible = val end}
end

function Library:CreateLabel(tab, text)
    local LabelFrame = Instance.new("Frame")
    LabelFrame.Name = "Label"
    LabelFrame.Parent = tab.Content
    LabelFrame.BackgroundColor3 = Config.Colors.Purple
    LabelFrame.BorderSizePixel = 0
    LabelFrame.Size = UDim2.new(1, 0, 0, 32)
    LabelFrame.LayoutOrder = #tab.Components + 1
    
    local LabelCorner = Instance.new("UICorner")
    LabelCorner.CornerRadius = UDim.new(0, 6)
    LabelCorner.Parent = LabelFrame
    
    local Label = Instance.new("TextLabel")
    Label.Parent = LabelFrame
    Label.BackgroundTransparency = 1
    Label.Size = UDim2.new(1, -24, 1, 0)
    Label.Position = UDim2.new(0, 12, 0, 0)
    Label.Font = Enum.Font.GothamBold
    Label.Text = text
    Label.TextColor3 = Config.Colors.Primary
    Label.TextSize = 12
    Label.TextXAlignment = Enum.TextXAlignment.Center
    
    table.insert(tab.Components, LabelFrame)
    return {Frame = LabelFrame, SetText = function(txt) Label.Text = txt end}
end

function Library:ToggleTransparency(state)
    Library.TransparencyEnabled = state
    local targetTransparency = state and 0.3 or 0
    
    TweenService:Create(MainFrame, Config.Animations.Normal, {
        BackgroundTransparency = targetTransparency
    }):Play()
    TweenService:Create(HeaderFrame, Config.Animations.Normal, {
        BackgroundTransparency = targetTransparency
    }):Play()
    TweenService:Create(SidebarFrame, Config.Animations.Normal, {
        BackgroundTransparency = targetTransparency
    }):Play()
    TweenService:Create(ContentContainer, Config.Animations.Normal, {
        BackgroundTransparency = targetTransparency
    }):Play()
    
    for _, tab in pairs(Library.Tabs) do
        TweenService:Create(tab.Button, Config.Animations.Normal, {
            BackgroundTransparency = targetTransparency
        }):Play()
    end
    
    for _, component in pairs(Library.CurrentTab.Components) do
        if component:IsA("Frame") then
            TweenService:Create(component, Config.Animations.Normal, {
                BackgroundTransparency = targetTransparency
            }):Play()
        end
    end
end

function Library:SetToggleKey(keyCode)
    if Library.ToggleConnection then
        Library.ToggleConnection:Disconnect()
    end
    
    Library.ToggleConnection = UserInputService.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed and input.KeyCode == keyCode then
            ScreenGui.Enabled = not ScreenGui.Enabled
        end
    end)
end

MinimizeButton.MouseButton1Click:Connect(function()
    ScreenGui.Enabled = false
end)

MinimizeButton.MouseEnter:Connect(function()
    TweenService:Create(MinimizeButton, Config.Animations.Fast, {
        BackgroundColor3 = Config.Colors.Yellow
    }):Play()
end)

MinimizeButton.MouseLeave:Connect(function()
    TweenService:Create(MinimizeButton, Config.Animations.Fast, {
        BackgroundColor3 = Config.Colors.Tertiary
    }):Play()
end)

CloseButton.MouseEnter:Connect(function()
    TweenService:Create(CloseButton, Config.Animations.Fast, {
        BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    }):Play()
end)

CloseButton.MouseLeave:Connect(function()
    TweenService:Create(CloseButton, Config.Animations.Fast, {
        BackgroundColor3 = Config.Colors.Red
    }):Play()
end)

local dragging = false
local dragStart = Vector2.new(0, 0)
local frameStart = UDim2.new(0, 0, 0, 0)

HeaderFrame.InputBegan:Connect(function(input, gameProcessed)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        frameStart = MainFrame.Position
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(frameStart.X.Scale, frameStart.X.Offset + delta.X, frameStart.Y.Scale, frameStart.Y.Offset + delta.Y)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

local function CreateConfirmDialog()
    local ConfirmGui = Instance.new("ScreenGui")
    ConfirmGui.Name = "ConfirmDialog"
    ConfirmGui.Parent = PlayerGui
    ConfirmGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ConfirmGui.DisplayOrder = 300
    
    local Overlay = Instance.new("Frame")
    Overlay.Parent = ConfirmGui
    Overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Overlay.BackgroundTransparency = 1
    Overlay.Size = UDim2.new(1, 0, 1, 0)
    Overlay.BorderSizePixel = 0
    
    local ConfirmFrame = Instance.new("Frame")
    ConfirmFrame.Parent = ConfirmGui
    ConfirmFrame.BackgroundColor3 = Config.Colors.Secondary
    ConfirmFrame.BorderSizePixel = 0
    ConfirmFrame.Size = UDim2.new(0, 320, 0, 140)
    ConfirmFrame.Position = UDim2.new(0.5, -160, 0.5, -70)
    
    local ConfirmCorner = Instance.new("UICorner")
    ConfirmCorner.CornerRadius = UDim.new(0, 8)
    ConfirmCorner.Parent = ConfirmFrame
    
    local ConfirmStroke = Instance.new("UIStroke")
    ConfirmStroke.Color = Config.Colors.Red
    ConfirmStroke.Thickness = 2
    ConfirmStroke.Parent = ConfirmFrame
    
    local ConfirmTitle = Instance.new("TextLabel")
    ConfirmTitle.Parent = ConfirmFrame
    ConfirmTitle.BackgroundTransparency = 1
    ConfirmTitle.Size = UDim2.new(1, 0, 0, 35)
    ConfirmTitle.Position = UDim2.new(0, 0, 0, 10)
    ConfirmTitle.Font = Enum.Font.GothamBold
    ConfirmTitle.Text = "Confirm Close"
    ConfirmTitle.TextColor3 = Config.Colors.White
    ConfirmTitle.TextSize = 15
    
    local ConfirmText = Instance.new("TextLabel")
    ConfirmText.Parent = ConfirmFrame
    ConfirmText.BackgroundTransparency = 1
    ConfirmText.Size = UDim2.new(1, -24, 0, 30)
    ConfirmText.Position = UDim2.new(0, 12, 0, 45)
    ConfirmText.Font = Enum.Font.Gotham
    ConfirmText.Text = "Are you sure you want to close the hub?"
    ConfirmText.TextColor3 = Config.Colors.WhiteDim
    ConfirmText.TextSize = 11
    ConfirmText.TextWrapped = true
    
    local ButtonsFrame = Instance.new("Frame")
    ButtonsFrame.Parent = ConfirmFrame
    ButtonsFrame.BackgroundTransparency = 1
    ButtonsFrame.Size = UDim2.new(1, -24, 0, 35)
    ButtonsFrame.Position = UDim2.new(0, 12, 1, -45)
    
    local CancelButton = Instance.new("TextButton")
    CancelButton.Parent = ButtonsFrame
    CancelButton.BackgroundColor3 = Config.Colors.Tertiary
    CancelButton.BorderSizePixel = 0
    CancelButton.Size = UDim2.new(0.48, 0, 1, 0)
    CancelButton.Font = Enum.Font.GothamBold
    CancelButton.Text = "Cancel"
    CancelButton.TextColor3 = Config.Colors.White
    CancelButton.TextSize = 12
    
    local CancelCorner = Instance.new("UICorner")
    CancelCorner.CornerRadius = UDim.new(0, 6)
    CancelCorner.Parent = CancelButton
    
    local ConfirmButton = Instance.new("TextButton")
    ConfirmButton.Parent = ButtonsFrame
    ConfirmButton.BackgroundColor3 = Config.Colors.Red
    ConfirmButton.BorderSizePixel = 0
    ConfirmButton.Size = UDim2.new(0.48, 0, 1, 0)
    ConfirmButton.Position = UDim2.new(0.52, 0, 0, 0)
    ConfirmButton.Font = Enum.Font.GothamBold
    ConfirmButton.Text = "Close Hub"
    ConfirmButton.TextColor3 = Config.Colors.White
    ConfirmButton.TextSize = 12
    
    local ConfirmBtnCorner = Instance.new("UICorner")
    ConfirmBtnCorner.CornerRadius = UDim.new(0, 6)
    ConfirmBtnCorner.Parent = ConfirmButton
    
    ConfirmFrame.Size = UDim2.new(0, 0, 0, 0)
    TweenService:Create(ConfirmFrame, Config.Animations.Bounce, {
        Size = UDim2.new(0, 320, 0, 140)
    }):Play()
    
    CancelButton.MouseButton1Click:Connect(function()
        ConfirmGui:Destroy()
    end)
    
    ConfirmButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
        ConfirmGui:Destroy()
        if ToggleGui then
            ToggleGui:Destroy()
        end
    end)
    
    CancelButton.MouseEnter:Connect(function()
        TweenService:Create(CancelButton, Config.Animations.Fast, {BackgroundColor3 = Config.Colors.Secondary}):Play()
    end)
    CancelButton.MouseLeave:Connect(function()
        TweenService:Create(CancelButton, Config.Animations.Fast, {BackgroundColor3 = Config.Colors.Tertiary}):Play()
    end)
    
    ConfirmButton.MouseEnter:Connect(function()
        TweenService:Create(ConfirmButton, Config.Animations.Fast, {BackgroundColor3 = Color3.fromRGB(255, 50, 50)}):Play()
    end)
    ConfirmButton.MouseLeave:Connect(function()
        TweenService:Create(ConfirmButton, Config.Animations.Fast, {BackgroundColor3 = Config.Colors.Red}):Play()
    end)
end

CloseButton.MouseButton1Click:Connect(function()
    CreateConfirmDialog()
end)

MainFrame.Size = UDim2.new(0, 0, 0, 0)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)

TweenService:Create(MainFrame, Config.Animations.Bounce, {
    Size = UDim2.new(0, 520, 0, 360),
    Position = UDim2.new(0.5, -260, 0.5, -180)
}):Play()

